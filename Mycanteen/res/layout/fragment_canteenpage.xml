<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example1.mycanteen.CanteenpageFragment" >

    <TextView
        android:id="@+id/canteenname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/canteendesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fragmentpagegrid"
        android:layout_below="@+id/fragmentpagegrid"
        android:text="TextView" />

    <GridLayout
        android:id="@+id/fragmentpagegrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/canteenname"
        android:layout_below="@+id/canteenname"
        android:columnCount="5"
        android:rowCount="3" >

        <Button
            android:id="@+id/buttonbook"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:text="预定" />

        <Button
            android:id="@+id/buttonbir"
            android:layout_column="4"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:text="生日预定 " />

        <Button
            android:id="@+id/buttonlm"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:text="留言" />

        <Button
            android:id="@+id/buttonmenu"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:text="菜谱" />

        <Button
            android:id="@+id/buttoncomment"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:text="评价" />

        <Button
            android:id="@+id/buttondetail"
            android:layout_column="4"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:text="详细信息 " />
    </GridLayout>

</RelativeLayout>