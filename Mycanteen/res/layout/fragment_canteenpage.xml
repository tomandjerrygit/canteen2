<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    
    android:stretchColumns="1" >
    
    <TextView
    android:id="@+id/canteenname"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin" />

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/buttonbook"
            android:background="#00000000"
            android:src="@drawable/button11"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:text="预定" />

        <ImageButton
            android:id="@+id/buttonlm"
            android:background="#00000000"
            android:src="@drawable/button21"
            android:text="留言" />

        <ImageButton
            android:id="@+id/buttonbir"
            android:background="#00000000"
            android:src="@drawable/button51"
            android:text="生日预定 " />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/buttoncomment"
            android:background="#00000000"
            android:src="@drawable/button31"
            android:text="评价" />

        <ImageButton
            android:id="@+id/buttonmenu"
            android:background="#00000000"
            android:src="@drawable/button41"
            android:text="菜谱" />

        <ImageButton
            android:id="@+id/buttondetail"
            android:background="#00000000"
            android:src="@drawable/button61"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:text="详细信息 " />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </TableRow>
    
    <TextView
        android:id="@+id/canteendesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fragmentpagegrid"
        android:layout_below="@+id/fragmentpagegrid"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="TextView" />
    
</TableLayout>